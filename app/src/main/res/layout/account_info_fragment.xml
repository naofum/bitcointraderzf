<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/default_padding"
              android:paddingRight="@dimen/default_padding"
              android:background="@drawable/click_layout_selector"
              android:clickable="true"
              android:orientation="vertical">
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/font_size_normal"
    android:text="@string/account_info"
  />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">
      <TextView
        android:id="@+id/your_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
      <de.dev.eth0.bitcointrader.ui.views.AmountTextView
        android:id="@+id/your_wallet_tradefee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="right"
      android:layout_weight="1">
      <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
        android:id="@+id/your_wallet_btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
        android:id="@+id/your_wallet_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>