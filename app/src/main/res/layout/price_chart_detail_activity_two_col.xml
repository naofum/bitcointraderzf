<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:orientation="horizontal" >

  <fragment
    android:id="@+id/price_chart_fragment"
    android:name="de.dev.eth0.bitcointrader.ui.fragments.PriceChartFragment"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent" />

  <fragment
    android:id="@+id/price_chart_detail_fragment"
    android:name="de.dev.eth0.bitcointrader.ui.fragments.PriceChartDetailFragment"
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="match_parent" />

</LinearLayout>