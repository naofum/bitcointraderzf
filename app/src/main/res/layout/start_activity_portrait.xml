<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:background="@color/fg_black">
  <ImageView
    android:id="@+id/start_activity_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/startscreen_logo"   
    android:layout_centerHorizontal="true"  />
  <TextView
    android:id="@+id/start_activity_headline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/list_entry_padding_horizontal"
    android:textColor="#ffffff"
    android:textSize="30sp"
    android:text="@string/app_name"
  />
  
</RelativeLayout>