  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/bitcointrader_actions"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:divider="@drawable/divider_dark"
  android:background="@drawable/action_bar_background"
    android:dividerPadding="@dimen/default_padding"
    android:measureWithLargestChild="true"
    android:orientation="horizontal"
    android:showDividers="middle" >

    <Button
      android:id="@+id/bitcointrader_actions_buy"
      style="@style/My.Widget.Button.Borderless"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawableLeft="@drawable/ic_action_receive"
      android:gravity="left|center_vertical"
      android:text="@string/bitcoin_action_buy"
      android:textAllCaps="true"
      android:textColor="@android:color/white"
      android:textStyle="bold" />

    <Button
      android:id="@+id/bitcointrader_actions_sell"
      style="@style/My.Widget.Button.Borderless"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawableRight="@drawable/ic_action_send"
      android:gravity="right|center_vertical"
      android:text="@string/bitcoin_action_sell"
      android:textAllCaps="true"
      android:textColor="@android:color/white"
      android:textStyle="bold" />
  </LinearLayout>